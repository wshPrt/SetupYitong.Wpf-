                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>-->
                                    <materialDesign:PackIcon
                                        Width="25"
                                        Height="20"
                                        Background="Transparent"
                                        BorderBrush="#FFCDCDCD"
                                        BorderThickness="0"
                                        Foreground="Gray"
                                        Kind="DotsHorizontalCircleOutline" />
                                </Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
